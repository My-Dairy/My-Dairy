<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/primary_color"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:fontFamily="@font/times_new_roman"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="fill_horizontal"
                android:text="Date: "
                android:fontFamily="@font/times_new_roman"
                android:textSize="20sp"
                android:textColor="@color/dark_blue"
                />
            <TextView
                android:id="@+id/table_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/08/2001"
                android:textColor="@color/black"
                android:fontFamily="@font/times_new_roman"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SukoCharo Type: "
                android:fontFamily="@font/times_new_roman"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/sukoCharo_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guno, Makaiyu"
                android:fontFamily="@font/times_new_roman"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/times_new_roman"
                android:text="Quantity(kg):  "
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/sukoCharo_Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10kg"
                android:fontFamily="@font/times_new_roman"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:text="Amount(₹):  "
                android:fontFamily="@font/times_new_roman"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/sukoCharo_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/times_new_roman"
                android:text="1000"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tractor Charge(₹):"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/times_new_roman"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tractor_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:fontFamily="@font/times_new_roman"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:text="Seed(₹):"
                android:fontFamily="@font/times_new_roman"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/seed_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:fontFamily="@font/times_new_roman"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fertilizer(₹):"
                android:fontFamily="@font/times_new_roman"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/fertilizer_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/times_new_roman"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Labour Charge(₹):"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/times_new_roman"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/labour_charge"
                android:layout_width="wrap_content"
                android:fontFamily="@font/times_new_roman"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
        </LinearLayout>

