<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entry.DanKhanEntryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/emerald_green"
        app:titleTextAppearance="@style/TitleText"
        android:elevation="4dp"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/pashudan_dairy_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pashudan (From Dairy)"
                    android:fontFamily="@font/bookos"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/hint_dark"
                    />

                <EditText
                    android:id="@+id/pashudan_dairy_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/times_new_roman"
                    android:hint="Enter the amount"
                    android:elevation="4dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingStart="20dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/main_btn"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:id="@+id/pashudan_extrnl_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pashudan (External)"
                    android:fontFamily="@font/bookos"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/hint_dark"
                    />

                <EditText
                    android:id="@+id/pashudan_extrnl_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter the amount"
                    android:elevation="4dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/times_new_roman"
                    android:paddingStart="20dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/main_btn"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:id="@+id/makai_own_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makai Bhardo (Own)"
                    android:fontFamily="@font/bookos"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/hint_dark"
                    />

                <EditText
                    android:id="@+id/makai_own_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter the amount"
                    android:elevation="4dp"
                    android:fontFamily="@font/times_new_roman"
                    android:layout_marginHorizontal="20dp"
                    android:paddingStart="20dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/main_btn"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:id="@+id/makai_ext_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makai Bhardo (External)"
                    android:fontFamily="@font/bookos"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/hint_dark"
                    />

                <EditText
                    android:id="@+id/makai_ext_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="4dp"
                    android:fontFamily="@font/times_new_roman"
                    android:hint="Enter the amount"
                    android:layout_marginHorizontal="20dp"
                    android:paddingStart="20dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/main_btn"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:id="@+id/papdi_extrnl_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Papdi (External)"
                    android:fontFamily="@font/bookos"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/hint_dark"
                    />

                <EditText
                    android:id="@+id/papdi_extrnl_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="4dp"
                    android:fontFamily="@font/times_new_roman"
                    android:hint="Enter the amount"
                    android:layout_marginHorizontal="20dp"
                    android:paddingStart="20dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/main_btn"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="150dp"
                >

                <TextView
                    android:id="@+id/pashuahar_othr_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pashuahar (Others)"
                    android:fontFamily="@font/bookos"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/hint_dark"
                    />

                <EditText
                    android:id="@+id/pashuahar_othr_spcfy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Specify the details"
                    android:elevation="4dp"
                    android:fontFamily="@font/times_new_roman"
                    android:layout_marginHorizontal="20dp"
                    android:paddingStart="20dp"
                    android:background="@drawable/main_btn"
                    />

                <EditText
                    android:id="@+id/pashuahar_othr_edit"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="4dp"
                    android:hint="Enter the amount"
                    android:fontFamily="@font/times_new_roman"
                    android:layout_marginHorizontal="20dp"
                    android:paddingStart="20dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/main_btn"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:fabCustomSize="55dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/primary_color"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_baseline_chevron_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>