<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.SplashActivity"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/cow_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="80dp"
        android:background="@drawable/main_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintDimensionRatio="1:1"
        />

    <TextView
        android:id="@+id/dairy_part"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="My Dairy"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/primary_color"
        android:textSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cow_logo"
        android:fontFamily="@font/century"
        />

    <TextView
        android:id="@+id/title_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dairy_part"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Manage Your Dairy Easily"
        android:textColor="@color/secondary_color"
        android:layout_marginHorizontal="30dp"
        android:textSize="22sp"
        android:fontFamily="@font/times_new_roman"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>