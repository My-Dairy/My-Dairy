<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="12dp"
        android:elevation="5dp"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/rangoli"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:rotation="90"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/rangoli"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:rotation="270"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/human"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/divider"
                android:layout_marginTop="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Want to enter your daily data?"
                android:fontFamily="@font/bookos"
                android:textColor="@color/dark_blue"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/divider"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                />


            <View
                android:id="@+id/divider"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/hint_dark"
                android:layout_marginVertical="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <Button
                android:id="@+id/btn_entry"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/secondary_color"
                android:fontFamily="@font/faustina_regular"
                android:background="@drawable/main_btn"
                android:layout_marginBottom="55dp"
                android:text="Open Entry"
                android:shadowColor="@color/white"
                app:layout_constraintLeft_toRightOf="@+id/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>




</FrameLayout>